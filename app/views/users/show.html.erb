<!--新規登録後、ログイン後のページ-->


  <p><%= notice %></p>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>

    <!--自分の投稿一覧-->
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image('50x50'), fallback: 'no_image.jpg' %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>