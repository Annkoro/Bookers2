<!--ユーザーの一覧ページ-->


<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> prohibited this obj from being saved:
  <ul>
    <% @book.errors.full messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <!--サイドバーUserinfoとNewbook-->
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>

<div class='col-md-8 offset-md-1'>
    <!--ユーザー一覧-->
    <h2>Users</h2>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image('50x50'), fallback: 'no_image.jpg' %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>