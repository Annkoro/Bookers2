<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--投稿一覧-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <!--サイドバー-->
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book %>
    </div>


<div class='col-md-8 offset-md-1'>
      <!--投稿一覧-->
      <h2>Books</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image('50x50'), fallback: 'no_image.jpg' %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>