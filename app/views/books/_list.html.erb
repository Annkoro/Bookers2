<!--NewBookの部分テンプレート-->

  <h2 class='mt-3'>New book</h2>
    <%= form_with model: book, local:true do |f| %>
      <div class='form-group'>
        <h4>title</h4>
        <%= f.text_field :title %>
      </div>
      <div class='form-group'>
        <h4>Opinion</h4>
        <%= f.text_field :body %>
      </div>
      <div class='form-group'>
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </div>
    <% end %>
