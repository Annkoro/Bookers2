<!--投稿の詳細画面-->


<%= notice %>


<!--サイドバー-->
<%- render 'users/list', user: @user %>
<%= render 'books/list', book: @book %>


<!--投稿詳細-->
<h2>Book detail</h2>
<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(@user) do %>
          <%= image_tag @book.user.get_profile_image('50x50'), fallback: 'no_image.jpg' %>
          <%= @user.name %>
        <%= end %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
      <td><%= link_to 'Destroy', book_path(@book), method: :delete, 'data-confirm' => "本当に消しますか？" %></td>
    </tr>
  </tbody>
</table>